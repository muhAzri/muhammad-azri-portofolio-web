---
export interface Props {
  projectName: string;
  imagePath: string;
}

const { projectName, imagePath } = Astro.props as Props;
---

<li
  class="flex justify-center flex-col splide__slide"
  id="splide01-slide02"
  role="tabpanel"
  aria-roledescription="slide"
  aria-label="2 of 4"
  style="margin-right: 0.5rem; width: calc(((100% + 0.5rem) / 1) - 0.5rem);"
  aria-hidden="true"
>
  <img
    alt="work"
    class="w-full object-cover object-center bg-white border-t border-black lg:border-r max-w-2xl max-h-96"
    src={imagePath}
  />
  <div
    class="text-white text-xs order-first p-3 text-center lg:border-r lg:border-white/20"
  >
    <span class="block font-semibold">{projectName}</span>
  </div>
</li>
